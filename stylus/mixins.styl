vendor(prop, args)
	-webkit-{prop} args
	-moz-{prop} args
	-ms-{prop} args
	-o-{prop} args
	{prop} args

// transparent

animation()
	vendor('animation', arguments)

background-size()
	vendor('background-size', arguments)

border-radius()
	vendor('border-radius', arguments)

box-shadow()
	vendor('box-shadow', arguments)

box-sizing()
	vendor('box-sizing', arguments)

opacity()
	vendor('opacity', arguments)

text-shadow()
	vendor('text-shadow', arguments)

transform()
	vendor('transform', arguments)

transition()
	vendor('transition', arguments)

transition-property()
	vendor('transition-property', arguments)

// custom

button()
	noselect()
	border-radius $button
	box-shadow inset 0 2px 2px 2px rgba(0,0,0,.2)
	box-sizing border-box
	color #ccc
	cursor pointer
	display block
	font-size ($button - 10)
	gradient rgba(0,0,0,.2), rgba(0,0,0,.4)
	height $button
	line-height $button
	position absolute
	text-align center
	transition background .2s linear, color .2s linear
	width $button
	z-index 100

	&:hover
		color #eee
		gradient rgba(0,0,0,.2), rgba(0,0,0,.3)
	
	&:active
		gradient rgba(0,0,0,.3), rgba(0,0,0,.4)

button-active()

	&
	&:active
	&:hover
		background rgba(0,0,0,.6)
		box-shadow 0 0 0
		color #fff
		cursor default
		font-weight bold

button-disabled()

	&
	&:active
	&:hover
		background 0
		box-shadow 0 0
		color rgba(255,255,255,.2)
		cursor default

gradient($from, $to, $angle = -90deg)
	background-image -webkit-linear-gradient($angle, $from, $to)
	background-image    -moz-linear-gradient($angle, $from, $to)
	background-image     -ms-linear-gradient($angle, $from, $to)
	background-image      -o-linear-gradient($angle, $from, $to)
	background-image         linear-gradient($angle - 90, $from, $to)

noselect()
	vendor(user-select, none)
	-webkit-touch-callout none